{  // @see https://eslint.org/docs/user-guide/configuring.html#configuration-cascading-and-hierarchy
  "root": false, // eslint will look for parent to use this config in addition to it
  "parser": "@typescript-eslint/parser",
  "parserOptions": { "project": "./tsconfig.json" }, // tests tsconfig
  "env": { "es6": true },
  "plugins": ["jest"],
  "extends": ["plugin:jest/recommended"],
  "rules": {
    "functional/no-let": 0,
    "functional/immutable-data": 0
  }
}
